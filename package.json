  "license": "MIT",
  "devDependencies": {
    "chai": "^1.10.0",
    "eslint": "^1.10.3",
    "husky": "^0.10.2",
    "mocha": "^2.1.0",
    "npm-release": "^1.0.0"
  },
  "dependencies": {
    "occamsrazor-validator": "^8.0.0",
    "setimmediate": "^1.0.4"
  }
}
